<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ucc.com.safetyapplication.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#9CCC65">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="70"
        android:weightSum="100"
        android:layout_marginTop="60dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:id="@+id/txtEmail"
            android:nextFocusDown="@+id/txtPassword"
            android:nextFocusLeft="@+id/txtPassword"
            android:nextFocusRight="@+id/txtPassword"
            android:nextFocusUp="@+id/txtPassword"
            android:paddingBottom="15dp"
            android:theme="@style/Theme.App.Base">

        <requestFocus />

        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:id="@+id/txtPassword"
            android:theme="@style/Theme.App.Base"
            android:layout_marginBottom="10dp"
            android:paddingBottom="15dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Login"
            android:id="@+id/btnLogin"
            android:textSize="15dp"
            android:background="#2E7D32"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</LinearLayout>
</LinearLayout>
